<section class="container">
  <div class="border p-4">
    <h1 class="text-center">
      <div style="height: 40px; color:coral; font-family:Display ">Submit your
        article here</div>
    </h1>

    <form
      action="articles/articlesC/{{FacultyId}}/{{AcademicYearsId}}"
      method="post"
      enctype="multipart/form-data"
      style="color: darkorange; font-family:Display; font-size:25px"
    >
      <div class="form-group">
        <label for="exampleInputEmail1">ArticlesName</label>
        <input
          class="form-control"
          type="text"
          name="articlesName"
          id="articlesName"
          aria-describedby="emailHelp"
          required
        />
      </div><br />
      <div class="form-group">
        <label for="exampleInputPassword1">Description</label>
        <input
          class="form-control"
          type="text"
          name="description"
          id="description"
          required
        />
      </div><br />
      <div class="form-group">
        <label for="">Image</label>
        <input type="file" name="files" required />
        <label for="">Document</label>
        <input type="file" name="files" required />
      </div><br />
      <div class="form-group form-check">
        <label for="">Once you submit your work, it will be reviewed and
          approved and you agree</label>
        <input
          type="checkbox"
          class="form-check-input"
          name="condition"
          id="condition"
          required
        />
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</section>
<br />

