<h1>
  <div style="height: 40px; color:coral;">Submit your article here</div>
</h1>

<form
  action="articles/articlesC/{{FacultyId}}/{{AcademicYearsId}}"
  method="post"
  enctype="multipart/form-data"
>
  <div class="form-group">
    <label for="exampleInputEmail1">ArticlesName</label>
    <input
      class="form-control"
      type="text"
      name="articlesName"
      id="articlesName"
      aria-describedby="emailHelp"
      required
    />
  </div><br />
  <div class="form-group">
    <label for="exampleInputPassword1">Description</label>
    <input
      class="form-control"
      type="text"
      name="description"
      id="description"
      required
    />
  </div><br />
  <div class="form-group">
    <label for="exampleInputPassword1">Image</label>
    <input type="file" name="files" required />
    <label for="exampleInputPassword1">Document</label>
    <input type="file" name="files" required />
  </div><br />
  <div class="form-group form-check">
    <label for="exampleInputPassword1">Once you submit your work, it will be
      reviewed and approved and you agree</label>
    <input
      type="checkbox"
      class="form-check-input"
      name="condition"
      id="condition"
      required
    />
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
<br />

<h2><div style="height: 40px; color:coral">Report information</div></h2>
{{#each find}}
  <div style="width: 300px; border: solid black">
    <ul>
      <li>Articles Name :{{articlesName}}</li>
      <li>Description :{{description}}</li>
      <li>CreatedAt :{{createdAt}}</li>
      <li>Comment:{{comment}}</li>
      <li>Image:
        <img src="/{{img}}" alt="..." style="height: 80px; waith: 80px" /></li>
      <li><a href="/{{doc}}" download="Document">Document</a></li>
    </ul></div>
{{/each}}