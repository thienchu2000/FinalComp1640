<div>
  <form
    enctype="multipart/form-data"
    method="post"
    action="/users/changeUser/{{_id}}"
  >
    <div
      class="form-row"
      style="margin-left: 400px ; border:4px solid rgb(231, 224, 224) ; width:600px; height: 650px; ; border-radius: 20px ; color:aliceblue; font-size:30px ; font-family:Display "
    >

      <div class="form-group col-md-6">
        <label for="inputEmail4">-------UserName-------</label>
        <input
          type="text"
          name="name"
          id="name"
          class="form-control"
          placeholder="UserName"
        />
      </div>

      <div class="form-group col-md-6">
        <label for="inputAddress">-------Last Name-------</label>
        <input
          type="text"
          class="form-control"
          name="lastName"
          placeholder="Last Name"
          id="lastName"
        />
      </div>

      <div class="form-group col-md-6">
        <label for="inputAddress">-------First Name-------</label>
        <input
          type="text"
          class="form-control"
          name="firstName"
          id="firstName"
          placeholder="Firt Name"
        />
      </div>

      <div class="form-group col-md-6">
        <label for="inputAddress">-------Address-------</label>
        <input
          type="text"
          class="form-control"
          name="address"
          id="address"
          placeholder="Address"
        />
      </div>

      <div class="form-group col-md-6">
        <label for="inputAddress">-------Phone-------</label>
        <input
          type="number"
          class="form-control"
          id="phone"
          name="phone"
          placeholder="EX: 09XXXXXXXXXX"
        />
      </div>
      <br />

      <div class="form-group col-md-6">
        <div
          class="custom-file"
          style="border:2px solid rgb(231, 224, 224) ; width:370px"
        >
          <img src="/{{img}}" alt="..." style="height: 120px; width:150px" />
          <label>Avatar</label>
          <input
            type="file"
            name="file"
            id="file"
            required
            class="custom-file-input"
          />
        </div>
        <div
          class="form-group col-md-6"
          style="margin-left:500px; margin-top:20px"
        >
          <button class="btn btn-primary">Change</button>
        </div>
      </div>

    </div>

  </form>
  <div style="margin-left:420px ; ">
    <form action="/users/find" method="get" style="padding-bottom: 50px;">
      <button type="submit" class="btn btn-primary mt-3">Back</button>
    </form>
  </div>
</div>