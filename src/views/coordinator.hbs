              name="status_{{this._id}}"
            />
            <label for="status_false_{{this._id}}">False</label>
            <input
              type="radio"
              value="false"
              id="status_false_{{this._id}}"
              name="status_{{this._id}}"
            />
          </td>
          <td>
            <button
              onclick="updateAr('{{this._id}}')"
              class="btn btn-primary"
            >Update</button>
          </td>
        </tr>
