<h3 class="text-center">Statistics</h3>
<div class="row">
  <div class="col-md-6">
    <table class="table table-striped table-dark">
      <thead>
        <tr>
          <th scope="col">Name Faculty</th>
          <th scope="col">Sum Articles</th>
        </tr>
      </thead>
      <tbody>
        {{#each sumAr}}
          <tr>
            <td>{{name}}</td>
            <td>{{count}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <div class="col-md-6">
    <table class="table table-striped table-dark">
      <thead>
        <tr>
          <th scope="col">Sum Users</th>
          <th scope="col">Users without Articles</th>
          <th scope="col">Sum Comments</th>
          <th scope="col">Articles without Comments</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>{{tong}}</td>
          <td>{{Ar}}</td>
          <td>{{sumCmt}}</td>
          <td>{{noCmt}}</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="container">
  <canvas id="myChart" width="700" height="400"></canvas>
</div>